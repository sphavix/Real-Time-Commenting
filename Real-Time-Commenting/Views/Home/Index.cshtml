@model IEnumerable<Real_Time_Commenting.Models.ViewModels.CaseViewModel>
@{
    ViewBag.Title = "Home Page";
}

<h3>FRG Support Cases</h3>

<p>
    @Html.ActionLink("New Case", "Create",  new { htmlAttributes = new { @class = "btn btn-default" } })
</p>

<table class="table table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CaseID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Subject)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.PriorityName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StatusName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateCreated)
        </th>
        <th></th>
    </tr>
        @foreach(var item in Model)
         {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CaseID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.Subject)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.PriorityName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StatusName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCreated)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>*@
                <td>
                    @Html.ActionLink("Add Comment", "Details", new { id = item.CaseID }) |
                    @Html.ActionLink("Update Case", "Update", new { id = item.CaseID }) |
                </td>
            </tr>
        }
</table>